<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.location.location.views.MyCustomConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MyConBackgroundColor="@color/colorBackgroundWhite"
        app:MyConCorRadiusTopLeft="@dimen/_20sdp"
        app:MyConCorRadiusTopRight="@dimen/_20sdp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_12sdp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.location.location.views.MyCustomTextView
            android:id="@+id/txtSheetTitle"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_4dp"
            android:layout_marginTop="@dimen/_16dp"
            app:MyBackgroundColor="@color/colorOrange"
            app:MyCorRadiusBottomLeft="@dimen/_20dp"
            app:MyCorRadiusBottomRight="@dimen/_20dp"
            app:MyCorRadiusTopLeft="@dimen/_20dp"
            app:MyCorRadiusTopRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.location.location.views.MyCustomTextView
            android:id="@+id/txtShortAsc"
            android:layout_width="@dimen/_zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:paddingVertical="@dimen/_6sdp"
            android:maxLines="1"
            android:text="Short By Ascending"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSheetTitle"
            app:layout_goneMarginTop="@dimen/_12dp"
            app:myFontFamily="medium" />

        <com.location.location.views.MyCustomTextView
            android:id="@+id/txtShortDes"
            android:layout_width="@dimen/_zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:ellipsize="end"
            android:paddingVertical="@dimen/_6sdp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Short By Descending"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtShortAsc"
            app:layout_goneMarginTop="@dimen/_12dp"
            app:myFontFamily="medium" />



    </com.location.location.views.MyCustomConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>